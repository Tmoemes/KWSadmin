@using KWSAdmin.Application
@using AspView.Controllers
@using KWSAdmin.Persistence.Interface.Dtos
@model KWSAdmin.Application.Order

@{
    ViewData["Title"] = "Edit Order";
    Client _client = new Client();
    Accu _accu = new Accu();
}


<h4>OrderViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div> @Html.DropDownListFor(m => m.Location, new SelectList(Enum.GetValues(typeof(Location))))</div>

            <div>@Html.DropDownListFor(m => m.Client, new SelectList(_client.GetAllClients(HomeController.Connection).Select(m => m.ToString()))) <a asp-action="AddClient">Add new Client</a> </div>

            <div>@Html.DropDownListFor(m => m.Accu, new SelectList(_accu.GetAllAccus(HomeController.Connection).Select(m => m.ToString()))) <a asp-action="AddAccu">Add new Accu</a> </div>

            <div class="col-sm-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.Info)
                    @Html.TextAreaFor(model => model.Info)
                    <span asp-validation-for="Info" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index", "Home") |
    @Html.ActionLink("Back to order","OrderView",new {id = Model.Id })
</div>

