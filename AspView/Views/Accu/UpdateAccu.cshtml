@model AccuViewModel

<h4>Accu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateAccu">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specs" class="control-label"></label>
                <input asp-for="Specs" class="form-control" />
                <span asp-validation-for="Specs" class="text-danger"></span>
            </div>
            <div>@Html.TextAreaFor(m => m.CreatorId,new {style = "display: none;"})</div>
            <div>Creator: @Html.DisplayTextFor(m => m.CreatorName) </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AccuView" asp-route-id="@Model.Id">Back to accu</a>|
    <a asp-action="Index" asp-controller="Home">Back to List</a>
</div>

